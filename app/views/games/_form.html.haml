= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  = select_tag :rase_type, options_for_select(Unit.all.pluck(:rase_type).uniq)
  .actions
    = f.submit 'Save'
